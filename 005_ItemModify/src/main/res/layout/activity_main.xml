<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <Button
        android:id="@+id/insert_single"

        android:gravity="center"
        android:text="增加单条数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/insert_multi"

        android:gravity="center"
        android:text="增加多条数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintTop_toTopOf="@+id/insert_single"
        app:layout_constraintBottom_toBottomOf="@+id/insert_single"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/delete_single"

        android:gravity="center"
        android:text="删除单条数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/insert_single"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/delete_multi"

        android:gravity="center"
        android:text="删除多条数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintTop_toTopOf="@+id/delete_single"
        app:layout_constraintBottom_toBottomOf="@+id/delete_single"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/modify_single"

        android:gravity="center"
        android:text="修改单条数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/delete_single"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/modify_multi"

        android:gravity="center"
        android:text="修改多条数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintTop_toTopOf="@+id/modify_single"
        app:layout_constraintBottom_toBottomOf="@+id/modify_single"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/move_single"

        android:gravity="center"
        android:text="移动数据"

        android:layout_width="0dip"
        android:layout_height="0dip"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/modify_single"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="0dip"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintTop_toBottomOf="@+id/move_single"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"

        android:background="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>